<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tip_dialog_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/exit_dialog_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认退出？？"
            android:textColor="#555555"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exit_dialog_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exit_dialog_layout_1"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/exit_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btu_selector"
            android:text="确认"
            android:textSize="@dimen/CommenTextSize"
            android:textColor="@color/BtuTextColor" />

        <Button
            android:id="@+id/exit_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/commen_btu_shape"
            android:text="取消"
            android:textSize="@dimen/CommenTextSize"
            android:textColor="@color/BtuTextColor" />
    </LinearLayout>
</RelativeLayout>