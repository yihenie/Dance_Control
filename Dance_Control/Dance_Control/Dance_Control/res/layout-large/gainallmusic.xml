<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ListView android:id="@+id/gainallmusic_list" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/inform_shape" >

        <Button
            android:id="@+id/gainallmusic_submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/EmotionBtuHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="@dimen/CommenTextSize"
            android:textColor="@color/BtuTextColor"
            android:background="@drawable/btu_selector"
            android:enabled="false"
            android:text="提交" />
    </RelativeLayout>
</RelativeLayout>