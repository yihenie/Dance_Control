<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/nofication_download_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon" />

    <LinearLayout
        android:id="@+id/nofication_download_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nofication_download_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前下载的音乐数目："
            android:textColor="@color/Common_Word"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/nofication_download_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:textColor="@color/Common_Word"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_download_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nofication_download_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/notification_download_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前下载量："
            android:textColor="@color/Common_Word"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/notification_download_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/Common_Word"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="%"
            android:textColor="@color/Common_Word"
            android:textSize="10dp" />
    </LinearLayout>

</RelativeLayout>