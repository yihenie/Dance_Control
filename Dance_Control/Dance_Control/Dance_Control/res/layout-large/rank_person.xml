<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/rank_person_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:src="@drawable/no_1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/rank_person_numberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="1"
            android:textColor="@color/Common_Word"
            android:textSize="@dimen/CommenTextSize" />

        <com.example.dance_control.circleimageview.CircleImage
            android:id="@+id/rank_person_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/rank_person_number"
            android:background="@color/transparent"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/rank_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/rank_person_img"
            android:textColor="@color/Common_Word"
            android:textSize="@dimen/CommenTextSize" />

        <TextView
            android:id="@+id/rank_person_othername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank_person_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/rank_person_img"
            android:textColor="@color/Common_Word"
            android:textSize="@dimen/CommenTextSize" />

        <TextView
            android:id="@+id/rank_person_hots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:textColor="@color/Common_Word"
            android:textSize="@dimen/CommenTextSize" />
        
         <ImageButton
            android:id="@+id/rank_person_delete"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:src="@drawable/delete_before" />
    </RelativeLayout>

</LinearLayout>