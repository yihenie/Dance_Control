<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView android:id="@+id/regiment_music_dital_praise"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/praise_before"/>
        
        <TextView
            android:id="@+id/regiment_music_dital_intro"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="最新劲霸音乐"
            android:textSize="@dimen/CommenTextSize"
            android:textColor="@color/Common_Word" />

        <TextView
            android:id="@+id/regiment_music_dital_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_weight="2"
            android:text="下载人数:"
            android:textSize="@dimen/CommenTextSize"
            android:textColor="@color/Common_Word" />

        <TextView
            android:id="@+id/regiment_music_dital_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:text="0"
            android:textSize="@dimen/CommenTextSize"
            android:textColor="@color/Common_Word"/>

        <ImageButton
            android:id="@+id/regiment_music_dital_download"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/download" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/regiment_music_dital_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:progress="0"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>