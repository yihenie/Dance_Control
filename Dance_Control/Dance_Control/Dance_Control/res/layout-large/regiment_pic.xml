<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Theme_Color"
    android:orientation="vertical" >

    <include
        android:id="@+id/regiment_pic_head"
        layout="@layout/regiment_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/regiment_pic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/Common_Text"
            android:text="舞团图库"
            android:padding="5dp"
            android:layout_marginLeft="1dp"
            android:textColor="@color/Common_Word"
            android:textSize="@dimen/CommenTextSize" />

        <LinearLayout
            android:id="@+id/regiment_music_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/regiment_pic_add_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add_pic" />
        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/regiment_pic_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:listSelector="@drawable/list_selector"
        android:verticalSpacing="1dp" />

</LinearLayout>