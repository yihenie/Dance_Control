<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_shape" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/all_repeat_list_head_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/all_repeat_list_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/all_repeat_list_head_img"
            android:text="名字"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/all_repeat_list_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/all_repeat_list_head_img"
            android:layout_marginRight="5dp"
            android:text="时间"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/all_repeat_list_repeatword_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_repeat_list_head_img"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="内容" />
    </RelativeLayout>

</LinearLayout>