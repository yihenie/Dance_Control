<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Theme_Color" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#50ffffff" >

        <RelativeLayout
            android:id="@+id/join_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <com.example.dance_control.circleimageview.CircleImage
                android:id="@+id/join_head_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/transparent"
                android:src="@drawable/default_head" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/join_layout_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/join_layout_1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/join_true_name_edit"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/no_edge_edit_shape"
                android:hint="姓名"
                android:padding="5dp"
                android:textSize="@dimen/CommenHintSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_layout_8"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/join_layout_1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/join_name_edit_edit"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/no_edge_edit_shape"
                android:hint="曳称"
                android:padding="5dp"
                android:textSize="@dimen/CommenHintSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_layout_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/join_layout_1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/join_sex_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="性别："
                android:textSize="13dp"
                android:visibility="gone" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/join_sex_select_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:checked="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_pop_qz_boy" />

                <RadioButton
                    android:id="@+id/join_sex_select_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_pop_qz_girl_1" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_layout_3"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/join_layout_1" >

            <EditText
                android:id="@+id/join_host_edit_edit"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:padding="5dp"
                android:background="@drawable/no_edge_edit_shape"
                android:hint="账号--请输入你的QQ号"
                android:singleLine="true"
                android:textSize="@dimen/CommenHintSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_layout_4"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/join_layout_1" >

            <TextView
                android:id="@+id/join_password_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="登陆密码："
                android:textSize="13dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/join_password_edit_edit"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/no_edge_edit_shape"
                android:hint="密码"
                android:padding="5dp"
                android:password="true"
                android:singleLine="true"
                android:textSize="@dimen/CommenHintSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_layout_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_layout_5"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/join_layout_1" >

            <EditText
                android:id="@+id/join_surepassword_edit_edit"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/no_edge_edit_shape"
                android:hint="确认密码"
                android:padding="5dp"
                android:password="true"
                android:singleLine="true"
                android:textSize="@dimen/CommenHintSize" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/join_layout_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" >

        <Button
            android:id="@+id/join_register_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/btu_selector"
            android:text="注册"
            android:textColor="@color/BtuTextColor" />

        <Button
            android:id="@+id/join_exit_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/btu_selector"
            android:text="退出"
            android:textColor="@color/BtuTextColor" />
    </LinearLayout>

</RelativeLayout>