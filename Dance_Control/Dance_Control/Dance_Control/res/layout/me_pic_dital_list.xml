<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BtuTextColor"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/me_pic_dital_list_Num"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="3" />

    <ImageView
        android:id="@+id/me_pic_dital_list_UpDownimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_up" />

    <TextView
        android:id="@+id/me_pic_dital_list_blank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/me_pic_dital_list_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_set" />

    <TextView
        android:id="@+id/me_pic_dital_list_blank_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>