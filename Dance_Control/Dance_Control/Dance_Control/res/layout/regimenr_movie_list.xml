<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_shape" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/regiment_movie_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/regiment_movie_list_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/fault_movie" />

            <TextView
                android:id="@+id/regiment_movie_list_text"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="介绍"
                android:textSize="@dimen/CommenTextSize"
                android:textColor="@color/Common_Word" />
        </LinearLayout>

        <ImageView
            android:id="@+id/regiment_movie_list_praise"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/praise_before" />

        <ImageView
            android:id="@+id/regiment_movie_list_button_option"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/regiment_movie_list_layout"
            android:layout_alignParentRight="true"
            android:src="@drawable/option"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>