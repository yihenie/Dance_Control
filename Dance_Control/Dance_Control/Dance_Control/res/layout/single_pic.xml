<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/single_pic_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_set" />

    <ImageView
        android:id="@+id/single_pic_select_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@id/single_pic_img"
        android:layout_alignTop="@id/single_pic_img"
        android:background="#ffffff"
        android:src="@drawable/select_no" />

</RelativeLayout>